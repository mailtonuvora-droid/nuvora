generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  mobile        String?
  
  subscriptionTier String @default("free") // "free" or "premium"
  subscriptionStatus String @default("active") // "active", "expired", "cancelled"
  subscriptionStartDate DateTime?
  subscriptionEndDate DateTime?
  razorpayCustomerId String?

  emailNotifications Boolean @default(true)
  whatsappNotifications Boolean @default(false)
  smsNotifications Boolean @default(false)
  
  telegramChatId       String?
  telegramConnectToken String? @unique

  accounts      Account[]
  sessions      Session[]
  products      Product[]
  notifications Notification[]
  usage         UsageStats?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Product {
  id          String   @id @default(cuid())
  userId      String
  url         String
  title       String?
  imageUrl    String?
  currentPrice Decimal?
  initialPrice Decimal?
  currency    String   @default("INR")
  isAvailable Boolean  @default(true)
  
  alertEnabled   Boolean @default(true)
  notifyAnyDrop  Boolean @default(false)
  alertType      String? // "percentage" or "fixed_price"
  alertThreshold Decimal?
  
  lastCheckedAt DateTime?
  nextCheckAt   DateTime?
  checkInterval Int      @default(900) // seconds

  priceHistory PriceHistory[]
  notifications Notification[]

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, url])
}

model PriceHistory {
  id        String   @id @default(cuid())
  productId String
  price     Decimal
  isAvailable Boolean @default(true)
  checkedAt DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId, checkedAt])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  productId String?
  type      String   // "price_drop", "back_in_stock"
  message   String
  isRead    Boolean  @default(false)
  sentAt    DateTime @default(now())

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product? @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model UsageStats {
  id        String   @id @default(cuid())
  userId    String   @unique
  trackedProductsCount Int @default(0)
  checksToday Int @default(0)
  lastResetAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
